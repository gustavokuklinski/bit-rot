<config>

    <!-- Player and game Config -->
    <player>
        <speed value="2" /> <!-- Player speed -->

        <!-- Food and Water modifier -->
        <food_water_decay_seconds value="5.0" /> <!-- Seconds to decay water -->
        <food_decay value="0.2" /> <!-- Seconds to decay food -->
        <water_decay value="0.3" /> <!-- Seconds to decay water -->
        <water_autodrink value="true" /> <!-- Enable water auto-drink -->
        <water_threshold value="90" /> <!-- Percentage to start auto-drink -->
        <food_water_multiplier_decay value="1.5" /> <!-- Seconds to decay food and water -->

        <!-- Setup Zoom, View Radius and Fog of War -->
        <zoom_start value="3.0" /> <!-- Zoom start game -->
        <zoom_far value="1.3" /> <!-- Zoom Far on game -->
        <zoom_near value="5.0" /> <!-- Zoom Near on game -->
        <view_radius value="4" /> <!-- How long items and zombies get on player POV -->
        <fow_radius value="10" /> <!-- Fog radius -->

        <!-- Day/Night cycles -->
        <day_night_cycle value="900000" /> <!-- Day cycle in MS -->
        <day_night_cycle_transition value="900000" /> <!-- Day face in MS -->
        <day_night_cycle_darkness value="255" /> <!-- Night darkness in RGB(255,255,255) - WHITE -->
        
        <!-- Hour start cycle -->
        <start_hour value="6" /> <!-- Hour to start the game: 6AM -->
    </player>

    <!-- Items Durabilitie Config -->
    <durability>
        <multiplier value="1.0" />
        <weapon_multiplier value="1.0" />
        <tool_multiplier value="1.0" />
    </durability>

    <!-- Spawning Config -->
    <spawning>
        <item_spawn_chance_multiplier value="1.0" /> <!-- Item spawn change based on chance="1" XML item -->
    </spawning>

    <!-- Zombies Config -->
    <zombie>
        <speed value="1" /> <!-- Zombie Speed -->
        <drop value="1" />  <!-- Zombie Drop 0 to 100 (full drop) -->
        <detection value="20" /> <!-- Zombie detect player radius -->
        <wander value="true" /> <!-- Zombie wander true = wander, false = follow the player -->
        <wander_interval value="2000" /> <!-- wandering interval in MS -->
        <sight_check value="true" />  <!-- Zombie spot the player and go to -->
        <spawn value="10" /> <!-- How many zombies per spawn -->
        <respawn_timer value="0" /> <!-- 600000 = Every 10 minutes / Time to Reaspawn Zombie in MS-->
    </zombie>

</config>